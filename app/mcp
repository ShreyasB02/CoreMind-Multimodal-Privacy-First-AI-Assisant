# app/mcp/summarizer.py

import subprocess
import json

def summarize_cluster(text_list, model_name="llama3"):
    """
    Summarize a cluster of related memory entries using Ollama.
    """
    joined = "\n".join(f"- {text}" for text in text_list)
    prompt = f"""Summarize the following conversation history in 3–4 sentences. Keep it concise and human-readable:

{joined}

Summary:"""

    try:
        # Call Ollama via subprocess
        result = subprocess.run(
            ["ollama", "run", model_name],
            input=prompt.encode("utf-8"),
            stdout=subprocess.PIPE,
            stderr=subprocess.PIPE,
            timeout=60
        )

        output = result.stdout.decode("utf-8")

        # Ollama output may include extra tokens — extract the summary portion
        lines = output.strip().split("\n")
        summary_lines = [line for line in lines if line and not line.lower().startswith("model:")]
        summary = "\n".join(summary_lines).strip()

        return summary

    except Exception as e:
        return f"Error during summarization: {e}"
